{% extends 'AppBundle::layout.html.twig' %}

{% block main %}

    <div class="bc flex-container flex-center" style="background:url({{ asset('images/bc-learn.jpg') }});">
        <h2 class="bc-title title">{{ 'learn.page.title'|trans }}</h2>
        <div class="decore-wrapper decore-white">
